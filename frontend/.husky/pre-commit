#!/bin/sh
HUSKY_DIR="$(dirname "$0")"
if [ -f "$HUSKY_DIR/_/husky.sh" ]; then
  . "$HUSKY_DIR/_/husky.sh"
else
  echo "Warning: Husky bootstrap file not found at $HUSKY_DIR/_/husky.sh; continuing without Husky initialization." >&2
fi

echo "ğŸ” Rodando lint-staged..."
npx lint-staged

echo "ğŸ§ª Rodando testes afetados..."
npx ng test --watch=false --browsers=ChromeHeadless --include='**/*.spec.ts'
